<h1>New Comic</h1>
<%= form_for @comic do |f| %>
  <% if params[:collection_id] %>
    <%= hidden_field_tag :collection_id, params[:collection_id] %>
  <% end %>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :issue_number %>
    <%= f.number_field :issue_number %>
  </div>
  <div>
    <%= f.label :publisher %>
    <%= f.text_field :publisher %>
  </div>
  <div>
    <%= f.label :writer %>
    <%= f.text_field :writer %>
  </div>
  <div>
    <%= f.label :artist %>
    <%= f.text_field :artist %>
  </div>
  <div>
    <%= f.label :publication_date %>
    <%= f.date_field :publication_date %>
  </div>
  <div>
    <%= f.label :read_on %>
    <%= f.date_field :read_on %>
  </div>
  <div>
    <%= f.label :cover_art %>
    <%= f.file_field :cover_art %>
  </div>
  <%= f.submit %>
<% end %>
