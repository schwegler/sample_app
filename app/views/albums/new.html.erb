<h1>New Album</h1>
<%= form_for @album do |f| %>
  <% if params[:collection_id] %>
    <%= hidden_field_tag :collection_id, params[:collection_id] %>
  <% end %>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :artist %>
    <%= f.text_field :artist %>
  </div>
  <div>
    <%= f.label :release_year %>
    <%= f.number_field :release_year %>
  </div>
  <div>
    <%= f.label :genre %>
    <%= f.text_field :genre %>
  </div>
  <div>
    <%= f.label :publication_date %>
    <%= f.date_field :publication_date %>
  </div>
  <div>
    <%= f.label :listened_on %>
    <%= f.date_field :listened_on %>
  </div>
  <div>
    <%= f.label :cover_art %>
    <%= f.file_field :cover_art %>
  </div>
  <%= f.submit %>
<% end %>
