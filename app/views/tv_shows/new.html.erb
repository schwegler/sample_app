<h1>New Tv Show</h1>
<%= form_for @tv_show do |f| %>
  <% if params[:collection_id] %>
    <%= hidden_field_tag :collection_id, params[:collection_id] %>
  <% end %>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :season %>
    <%= f.number_field :season %>
  </div>
  <div>
    <%= f.label :episode %>
    <%= f.number_field :episode %>
  </div>
  <div>
    <%= f.label :network %>
    <%= f.text_field :network %>
  </div>
  <div>
    <%= f.label :publication_date %>
    <%= f.date_field :publication_date %>
  </div>
  <div>
    <%= f.label :watched_on %>
    <%= f.date_field :watched_on %>
  </div>
  <div>
    <%= f.label :cover_art %>
    <%= f.file_field :cover_art %>
  </div>
  <%= f.submit %>
<% end %>
