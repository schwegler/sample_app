<div class="d-flex justify-content-between align-items-center mb-3">
  <h1>Wrestling Events</h1>
  <%= link_to 'New Event', new_wrestling_event_path, class: "btn btn-primary" %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover align-middle">
    <thead class="table-light">
      <tr>
        <th>Title</th>
        <th>Promotion</th>
        <th>Date</th>
        <th>Venue</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @wrestling_events.each do |event| %>
        <tr>
          <td><%= event.title %></td>
          <td><%= event.promotion %></td>
          <td><%= event.date %></td>
          <td><%= event.venue %></td>
          <td>
            <%= link_to 'Show', event, class: "btn btn-sm btn-outline-info" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
